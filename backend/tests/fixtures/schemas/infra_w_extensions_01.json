{
    "version": "1.0",
    "nodes": [
        {
            "name": "device",
            "kind": "Device",
            "default_filter": "name__value",
            "display_labels": ["name__value"],
            "attributes": [
                {"name": "name", "kind": "Text", "unique": true},
                {"name": "description", "kind": "Text", "optional": true},
                {"name": "type", "kind": "Text"}
            ],
            "relationships": [
                {"name": "tags", "peer": "Tag", "optional": true, "cardinality": "many", "kind": "Attribute"}
            ]
        }
    ],
    "extensions": {
        "nodes": [ 
            {
                "kind": "Location",
                "attributes": [
                    {"name": "address", "kind": "Text", "optional": true }
                ]
            },
            {
                "kind": "Organization",
                "relationships": [
                    {"name": "devices", "peer": "Device", "kind": "Generic", "cardinality": "many", "optional": true }
                ]
            }
        ]
    }
}
